# MongoDB Connection String
# Get this from MongoDB Atlas: https://cloud.mongodb.com
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Also set as MONGO_URI for compatibility
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Google OAuth Client ID
# Get this from Google Cloud Console: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
# Optional comma-separated list if you use separate Web/Android/iOS OAuth client IDs
GOOGLE_CLIENT_IDS=

# Admin API Key for securing cron job endpoints (required to enable /admin routes)
# Generate a random string: openssl rand -hex 32
# Send this key using the X-API-Key request header.
ADMIN_API_KEY=your-admin-api-key

# Development-only escape hatch.
# Keep false in production. If true and ADMIN_API_KEY is missing, admin routes are open.
ALLOW_INSECURE_ADMIN=false

# JWT Secret Key (REQUIRED)
# Generate a strong random key: openssl rand -hex 64
JWT_SECRET_KEY=your-jwt-secret-key
# Access token lifetime in minutes (default 480 = 8 hours)
ACCESS_TOKEN_EXPIRE_MINUTES=480
# Refresh token lifetime in days (default 30)
REFRESH_TOKEN_EXPIRE_DAYS=30

# Frontend URL for CORS (set to your deployed frontend URL)
FRONTEND_URL=https://your-frontend-domain.com

# Scheduler toggle:
# false = rely on external cron/GitHub Actions (recommended for multi-instance deploys)
# true  = run APScheduler inside the API process
ENABLE_SCHEDULER=false
